<%= form_for @iteration, :url => {:action => :create, :id => @project_id } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="demo">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date, :id => :popupDatepicker %>
  </div>
  <div class="demo">
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date, :id => :popupDatepicker1 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
$(function() {
	$('#popupDatepicker').datepick({dateFormat: 'yyyy-mm-dd'});
	
	$('#popupDatepicker1').datepick({dateFormat: 'yyyy-mm-dd'});
});

</script>
