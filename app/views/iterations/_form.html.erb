<%= form_for @iteration, :url => {:action => :create, :id => @project_id } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="demo">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date, :id => "datepicker" %>
  </div>
  <div class="demo">
    <%= f.label :end_date %><br />
    <%= f.text_field :end_date, :id => "datepicker1" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
	<script>
	$(function() {
		$( "#datepicker" ).datepicker({
			altField: "#alternate",
			altFormat: "DD, d MM, yy"
		});
			$( "#datepicker1" ).datepicker({
			altField: "#alternate",
			altFormat: "DD, d MM, yy"
		});
	});
	</script>
