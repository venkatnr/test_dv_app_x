<%= form_for @project do |f| %>
  <%= f.text_field :user_id, :value => current_user.id, :class => "user_id"%>	

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<style>
	.user_id{ visibility:hidden;}
</style>
